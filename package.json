{
  "name": "jonbannister.github.io",
  "version": "1.0.0",
  "description": "",
  "main": "src/js/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:scss": "node-sass --output-style compressed -o dist src/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:lint": "stylint src/scss/*.scss --syntax scss || true",
    "build:css": "npm run css:lint &&npm run css:scss && npm run css:autoprefixer",
    "build:html": "posthtml -c posthtml.json",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "build:js": "webpack --mode=production",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:html": "onchange \"src/views\" -- npm run build:html",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "watch:js": "onchange \"src/js\" -- webpack --mode=development",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p serve watch:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonbannister/jonbannister.github.io.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonbannister/jonbannister.github.io/issues"
  },
  "homepage": "https://github.com/jonbannister/jonbannister.github.io#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.16.7",
    "autoprefixer": "^10.4.1",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.7",
    "eslint": "^7.32.0",
    "eslint-loader": "^4.0.2",
    "gh-pages": "^3.2.3",
    "htmlnano": "^1.1.1",
    "imagemin-cli": "^7.0.0",
    "jquery": "^3.6.0",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "posthtml": "^0.16.5",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.8.0",
    "stylint": "^1.3.8",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
